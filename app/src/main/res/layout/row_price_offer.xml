<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:textDirection="rtl">

    <!-- Name  -->
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgVw"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/titleName"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1">

        <CheckBox
            android:id="@+id/cbSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layoutDirection="rtl"
            android:text="@string/priceOfferSent"
            android:textColor="@color/summary"/>

        <!-- Summary -->
        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/imgVw"
            android:layout_weight="1.00"
            android:padding="10dp"
            android:text="@string/notFound"
            android:textColor="@color/summary"
            android:textSize="@dimen/summary" />

        <!-- Thumbnail Image -->
        <!--<ImageView
            android:id="@+id/imgVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="right|center"
            android:src="@drawable/add_user2_32"
            android:tint="@color/colorAccent" />-->

        <LinearLayout
            android:id="@+id/loInitials"
            android:orientation="horizontal"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/oval">
            <!-- android:backgroundTint="@color/colorAccent">-->

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvInitials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
