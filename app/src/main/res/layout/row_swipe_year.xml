<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/swipeBarHeight"
    android:layout_alignParentTop="true"
    android:layout_rowWeight="3"
    android:layoutDirection="ltr"
    android:background="@color/lightGrey">


    <TextView
        android:id="@+id/txtNext"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/swipeBarHeight"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:drawableRight="@drawable/arrow_right32"
        android:drawableTint="@color/colorSub1"
        android:gravity="end|center"
        android:text="Next"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:textDirection="ltr"
        android:id="@+id/txtPrev"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/swipeBarHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/arrow_left32"
        android:drawableTint="@color/colorSub1"
        android:gravity="start|center"
        android:text="Prev"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtYear"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/swipeBarHeight"
        android:gravity="center"
        android:text="year | 2017"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/summary"/>

</RelativeLayout>
