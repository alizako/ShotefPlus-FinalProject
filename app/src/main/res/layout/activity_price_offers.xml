<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_price_offers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="finals.shotefplus.activities.PriceOffersActivity">

    <TextView
        android:id="@+id/txtMonth"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent" />


    <ListView
        android:id="@+id/listViewPriceOffers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMonth"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <ImageButton
        android:id="@+id/btnSwipeRight"
        android:layout_width="@dimen/swipeBtnSize"
        android:layout_height="@dimen/swipeBtnSize"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/swipeBtnMargin"
        android:background="?attr/selectableItemBackground"
        android:elevation="@dimen/btnElevation"
        android:src="@drawable/arrow_right48"
        android:tint="@color/colorPrimaryDark"/>

    <ImageButton
        android:id="@+id/btnSwipeLeft"
        android:layout_width="@dimen/swipeBtnSize"
        android:layout_height="@dimen/swipeBtnSize"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/swipeBtnMargin"
        android:background="?attr/selectableItemBackground"
        android:elevation="@dimen/btnElevation"
        android:foregroundGravity="center"
        android:src="@drawable/arrow_left48"
        android:tint="@color/colorPrimaryDark"/>

    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="@dimen/ovalBtnSize"
        android:layout_height="@dimen/ovalBtnSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/ovalBtnMargin"
        android:layout_marginRight="@dimen/ovalBtnMargin"
        android:background="@drawable/oval"
        android:elevation="@dimen/btnElevation"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white" />

</RelativeLayout>
