<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filter_work"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stndrtDialogHeight"
    android:layout_margin="@dimen/marginDialog"
    android:layoutDirection="rtl"
    app:theme="@style/NoActionBarDialog"
    tools:context="finals.shotefplus.activities.FilterWorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/cbWorkDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="עבודה בוצעה"
                android:textColor="@color/summary"
                android:textSize="@dimen/summary" />

            <CheckBox
                android:id="@+id/cbWorkCancelled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="עבודה בוטלה"
                android:textColor="@color/summary"
                android:textSize="@dimen/summary" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginBtn"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/stndrtBtnHeight"
                android:layout_gravity="end"
                android:layout_weight="0.9"
                android:background="@android:color/transparent"
                android:text="@string/cancel"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSub"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnFilter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/stndrtBtnHeight"
                android:layout_gravity="end"
                android:layout_weight="0.1"
                android:background="@android:color/transparent"
                android:text="@string/doFilter"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSub"
                android:textStyle="bold" />
            <!--android:background="@color/colorSub"-->
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
