<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stndrtDialogHeightBig"
    android:layout_margin="@dimen/marginDialog"
    android:layoutDirection="rtl"
    app:theme="@style/NoActionBarDialog"
    tools:context="finals.shotefplus.activities.ChangeRegistrationInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <EditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="סיסמא ישנה"
            android:inputType="text"
            android:textColor="@color/summary"
            android:textSize="@dimen/summary" />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="סיסמא חדשה"
            android:inputType="text"
            android:textColor="@color/summary"
            android:textSize="@dimen/summary" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="דואל חדש"
            android:inputType="textEmailAddress"
            android:textColor="@color/summary"
            android:textSize="@dimen/summary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginBtn"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/stndrtBtnHeight"
                android:layout_gravity="end"
                android:layout_weight="0.9"
                android:background="@android:color/transparent"
                android:text="@string/cancel"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSub"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/stndrtBtnHeight"
                android:layout_gravity="end"
                android:layout_weight="0.1"
                android:background="@android:color/transparent"
                android:text="@string/update"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSub"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
