<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="finals.shotefplus.MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">


            <Button
                android:layout_column="1"
                android:text="@string/reciept"
                android:padding="3dp"
                android:background="@color/colorSub1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_weight="0.5"
                />
            <Button
                android:text="@string/suggestions"
                android:padding="3dp"
                android:background="@color/colorSub2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_weight="0.5"/>
            </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <Button
                android:layout_column="1"
                android:text="@string/expenses"
                android:padding="3dp"
                android:background="@color/colorSub3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_weight="0.5"
                />
            <Button
                android:text="@string/ShowReports"
                android:padding="3dp"
                android:background="@color/colorSub4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_weight="0.5"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <Button
                android:layout_column="1"
                android:text="@string/GenerateReports"
                android:padding="3dp"
                android:background="@color/colorSub5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_weight="0.5"
                />
            <Button
                android:text="@string/settings"
                android:padding="3dp"
                android:background="@color/colorSub6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_weight="0.5"/>
        </TableRow>


    </TableLayout>
</RelativeLayout>
