<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:textDirection="rtl">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgVwMenuCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.1"
            android:gravity="right|center"
            android:src="@drawable/menu_dots24px"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.9"
            android:drawableTint="@color/summary"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textDirection="rtl"
            android:textSize="@dimen/titleName"
            android:textStyle="bold" />

        <!--<ImageView
            android:id="@+id/imgVw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="right|center"
            android:paddingTop="10dp"
            android:src="@drawable/add_user2_32"
            android:tint="@color/colorAccent" />-->

        <LinearLayout
            android:id="@+id/loInitials"
            android:orientation="horizontal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/oval">
            <!-- android:backgroundTint="@color/colorAccent">-->

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvInitials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/lightGrey"
            android:padding="10dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/loReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgVwMenuReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="0.1"
                android:gravity="right|center"
                android:src="@drawable/menu_dots24px"
                android:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/txtReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="0.9"
                android:drawableTint="@color/summary"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text=""
                android:textSize="@dimen/titleName"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/notFound"
                android:textColor="@color/summary"
                android:textSize="@dimen/summary" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/colorDevider"
            android:padding="10dp" />
    </LinearLayout>

</LinearLayout>
