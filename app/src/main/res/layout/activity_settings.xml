<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context="finals.shotefplus.activities.SettingsActivity">

    <ImageView
        android:id="@+id/imgVw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/picSizeSignBig"
        android:alpha="0.6"
        android:background="@drawable/settings"
        android:orientation="vertical" />

    <include
        android:id="@+id/userProfile"
        layout="@layout/row_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgVw" />

    <include
        android:id="@+id/changePass"
        layout="@layout/row_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userProfile" />

    <include
        android:id="@+id/emailContent"
        layout="@layout/row_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changePass" />

    <include
        android:id="@+id/msgContent"
        layout="@layout/row_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailContent" />

    <include
        android:id="@+id/businessType"
        layout="@layout/row_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgContent" />
</RelativeLayout>
