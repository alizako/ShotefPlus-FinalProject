<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_receipts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="finals.shotefplus.activities.ReceiptsActivity">


    <include
        android:id="@+id/barMonth"
        layout="@layout/row_swipe_month"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <include
        android:id="@+id/barFilter"
        layout="@layout/row_filter"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/barMonth"/>

    <ListView
        android:id="@+id/listViewReceipts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barFilter"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />


    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="@dimen/ovalBtnSize"
        android:layout_height="@dimen/ovalBtnSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/ovalBtnMargin"
        android:layout_marginRight="@dimen/ovalBtnMargin"
        android:background="@drawable/oval"
        android:elevation="@dimen/btnElevation"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white" />

</RelativeLayout>
